extends layout

block content
 h2.smth
 p Please enter coffee order below
 
 if errors
  each error, i in errors
   div.alert.alert-danger #{error.msg}
 form(method='get', action='/new_coffee/coffee_test')
  .form-group
   label Select Lenght
   select.form-control(name = 'lenght')
    option(value = "extra short") Extra Short
    option(value = 'short') Short
    option(value = 'medium') Medium
    option(value = 'long') Long
    option(value = 'extra long') Extra Long
  input.btn.btn-primary(type='submit', name='submit',value = 'Submit')